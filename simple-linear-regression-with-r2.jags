model {
  ## likelihood
  ##
  for (i in 1:n.samp) {
    lma[i] ~ dnorm(mu[i], tau.resid)
    mu[i] <- beta.0 + beta.mat*mat[i]
  }

  ## priors
  ##
  ## regression coefficients
  ##
  beta.0 ~ dnorm(0.0, tau)
  beta.mat ~ dnorm(0.0, tau)
  ## 
  ## residual variance
  ##
  tau.resid ~ dexp(phi)
  sigma2.resid <- 1.0/tau.resid

  ## r^2: proportion of variance accounted for by regression
  ##
  r2 <- (lma.var - sigma2.resid)/lma.var
}